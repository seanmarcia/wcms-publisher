doctype html
html
  head
    / handles default html head tags and csrf_meta_tags
    = render 'frontend_toolkit/head', title: 'WCMS'
    = stylesheet_link_tag "application", media: "all"

    / Load Proxima Nova and Minion Pro
    = javascript_include_tag '//use.typekit.net/zvt1wex.js'
    javascript:
      try{Typekit.load();}catch(e){}

  body class="#{controller_name} #{action_name}"

    / account_list must be before biola_header otherwise the list won't be defined in time.
    = render 'layouts/account_list'
    = render 'frontend_toolkit/biola_header', enable_auth: true

    - unless (alerts = all_alerts).empty?
      .container
        #message_list
          - alerts.each do |msg|
            div.alert class=alert_class(msg[:type]) data-type=msg[:type]
              a.close data-dismiss="alert" href="#" &times;
              i> class=alert_icon(msg[:type])
              = msg[:message]

    #body
      = yield

    / = render 'frontend_toolkit/global_marketing_footer'
    #footer
      .container
        .footer
          p â™¥ from the Biola Apps team

    = javascript_include_tag "application"
